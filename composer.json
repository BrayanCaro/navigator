{
    "name": "nedwors/laravel-menu",
    "description": "A Laravel package to ease defining app menus",
    "keywords": [
        "nedwors",
        "laravel-menu"
    ],
    "homepage": "https://github.com/nedwors/laravel-menu",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sam Rowden",
            "email": "nedwors@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.62"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "nunomaduro/larastan": "^0.7.12",
        "orchestra/testbench": "^6.21.1",
        "pestphp/pest": "^1.20",
        "pestphp/pest-plugin-laravel": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Nedwors\\LaravelMenu\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nedwors\\LaravelMenu\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "./vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test:lint": "./vendor/bin/php-cs-fixer fix -v --dry-run --allow-risky=yes",
        "test:types": "./vendor/bin/phpstan analyse",
        "test:unit": "vendor/bin/pest --coverage",
        "test": [
            "@test:lint",
            "\n\n",
            "@test:types",
            "\n\n",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nedwors\\LaravelMenu\\LaravelMenuServiceProvider"
            ],
            "aliases": {
                "Menu": "Nedwors\\LaravelMenu\\Facades\\Menu"
            }
        }
    }
}
